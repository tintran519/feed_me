<div class="container" id="newBag">
  <%= form_for @bag, url: user_bags_path(@user), method: :post do |f| %>

    <div class="form-group">
      <%= f.label :Bag_Name %><br>
      <%= f.text_field :name %>
    </div>

    <div class="form-group">
      <%= f.label :estimated_price %><br>
      <%= f.number_field :estimated_price %>
    </div>

    <div class="form-group">
      <%= f.label :comments %><br>
      <%= f.text_area :comments %>
    </div>

      <%= f.submit "Create the bag!", class:"btn btn-default" %>
    <% end %>
</div>
<br>
<br>
<div class="container" id="createBag">
  <div class="row">
    <%= link_to "Back to All Bags", user_bags_path %>
  </div>
</div>
