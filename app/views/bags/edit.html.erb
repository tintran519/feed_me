<h1><%= @bag.name %></h1>

<%= form_for @bag, url: user_bag_path(@bag.user_id, @bag), method: :patch do |f| %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>


  <div>
    <%= f.label :estimated_price %>
    <%= f.number_field :estimated_price %>
  </div>

  <div>
    <%= f.label :comments %>
    <%= f.text_area :comments %>
  </div>

  <%= f.submit "Submit revisions" %>
<% end %>

<%= link_to "Back to All Bags", user_bags_path %>
