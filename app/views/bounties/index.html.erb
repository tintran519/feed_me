
<div class="row" id="bountyBoard">
  <h1>Bounty Board</h1>
    <div id="bountyList">
      <% @bags.each do |bag| %>
        <% if bag.hunter_id.nil? %>
          <!-- <p class="bounties"><%#= link_to "#{bag.name}", user_bag_orders_path(bag.user_id, bag.id) %></p> -->
               <div class="bounty-container">
                 <h4 class="bagName"><%= bag.name %></h4>
                 <%= link_to image_tag("https://d30y9cdsu7xlg0.cloudfront.net/png/360429-200.png",width:100, height:100), user_bag_orders_path(bag.user_id, bag.id), class: "bounties" %>
              </div>
          <% end %>
       <% end %>
      </div>
  </div>

<br>
<div class="row">
  <div class="col-sm-6" id="pending">
    <h2>Pending Missions</h2>
      <% @user.each do |hunt| %>
        <% if hunt.bag_status != "Completed!" %>
          <%= link_to "#{hunt.name}", user_bag_orders_path(hunt.user_id, hunt.id) %>
          <br>
        <% end %>
      <% end %>
      </div>

  <div class="col-sm-6" id="complete">
    <h2>Complete Missions</h2>
      <% @user.each do |hunt| %>
        <% if hunt.bag_status == "Completed!" %>
          <%= link_to "#{hunt.name}", user_bag_orders_path(hunt.user_id, hunt.id) %>
          <br>
      <% end %>
    <% end %>
  </div>
</div>
